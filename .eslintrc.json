{
    "extends": "eslint:recommended",
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "es2020": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "globals": {
        "logger": true
      },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "key-spacing": [
            "error",
            {
              "beforeColon": false,
              "afterColon": true
            }
        ],
        "keyword-spacing": [
            "error",
            {
              "overrides": {
                "else": {
                  "before": true
                },
                "while": {
                  "before": true
                },
                "catch": {
                  "before": true
                }
              }
            }
        ],
        "space-before-function-paren": ["error", "never"],
        "space-in-parens": ["error", "never"],
        "no-spaced-func": "error",
        "comma-dangle": "error",
        "eol-last": "error",
        "array-bracket-spacing": ["error", "always"],
        "max-len": ["error", { "code": 175, "tabWidth": 2 }],
        "valid-jsdoc": "error",
        "spaced-comment": ["error", "always"],
        "space-before-blocks": ["error", "always"],
        "no-console": "off"
    }
}
