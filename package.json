{
  "name": "seedfi-backend",
  "version": "2.1.0",
  "description": "A money lending application",
  "author": "Enyata Nexus Engineering Team",
  "license": "ISC",
  "private": true,
  "main": "app.js",
  "engines": {
    "node": "16.8.0",
    "npm": "8.19.2"
  },
  "scripts": {
    "lint": "eslint --fix src/ --ext .js",
    "dev": "nodemon --exec babel-node src/app.js",
    "cron": "babel-node  cronjobs/main-cron/main.cronjob.js",
    "payment-cron": "babel-node  cronjobs/payment-cron/main.cronjob.js",
    "active-status": "babel-node  cronjobs/active-status/main.cronjob.js",
    "alert-notification": "babel-node  cronjobs/alert-notification/main.cronjob.js",
    "cluster-loan": "babel-node  cronjobs/cluster-loan/main.cronjob.js",
    "cluster-repayment": "babel-node  cronjobs/cluster-repayment/main.cronjob.js",
    "ending-notification": "babel-node  cronjobs/ending-notification/main.cronjob.js",
    "personal-loan": "babel-node  cronjobs/personal-loan/main.cronjob.js",
    "promo-status": "babel-node  cronjobs/promo-status/main.cronjob.js",
    "status-overdue": "babel-node  cronjobs/status-overdue/main.cronjob.js",
    "prestart": "npm run migrate:up && npm run seed:up",
    "start": "babel-node  src/app.js",
    "pretest": "cross-env SEEDFI_NODE_ENV=test npm run lint && cross-env SEEDFI_NODE_ENV=test npm run seed:reset:test && cross-env SEEDFI_NODE_ENV=test npm run migrate:reset:test && cross-env SEEDFI_NODE_ENV=test npm run migrate:up:test && cross-env SEEDFI_NODE_ENV=test npm run seed:up:test",
    "test": "cross-env SEEDFI_NODE_ENV=test debug=true nyc --reporter=lcov --reporter=text --reporter=text-summary  mocha --timeout 120000 --require @babel/register tests/index.js --exit",
    "migrate:create": "db-migrate create --config database.json",
    "migrate:up": "db-migrate up --config database.json",
    "migrate:down": "db-migrate down --config database.json",
    "migrate:reset": "db-migrate reset --config database.json",
    "seed:create": "db-migrate create:seed --config database.json",
    "seed:up": "db-migrate up:seed --config database.json",
    "seed:down": "db-migrate down:seed --config database.json",
    "seed:reset": "db-migrate reset:seed --config database.json",
    "migrate:up:test": "db-migrate up --config database.json -e test",
    "migrate:reset:test": "db-migrate reset --config database.json -e test",
    "seed:up:test": "db-migrate up:seed --config database.json -e test",
    "seed:reset:test": "db-migrate reset:seed --config database.json -e test",
    "build": "babel src -d dist --source-maps"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "dependencies": {
    "@joi/date": "^2.1.0",
    "@sendgrid/mail": "^7.7.0",
    "aws-sdk": "^2.1333.0",
    "axios": "^1.2.1",
    "bcrypt": "^5.1.0",
    "bluebird": "^3.7.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "crypto-js": "^4.1.1",
    "dayjs": "^1.11.6",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.0",
    "firebase-admin": "^11.5.0",
    "helmet": "^6.0.1",
    "http-status": "^1.5.3",
    "joi": "^17.7.0",
    "jsonwebtoken": "^8.5.1",
    "moment-timezone": "^0.5.43",
    "node-cron": "^3.0.2",
    "pg-promise": "^10.15.4",
    "puppeteer": "^18.1.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.5",
    "@babel/node": "^7.20.5",
    "@babel/preset-env": "^7.20.2",
    "@babel/register": "^7.18.9",
    "assert": "^2.0.0",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.29.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.2",
    "mime": "^3.0.0",
    "mocha": "^10.1.0",
    "nodemon": "^2.0.20",
    "nyc": "^15.1.0",
    "sinon": "^15.0.0",
    "supertest": "^6.3.2"
  }
}
